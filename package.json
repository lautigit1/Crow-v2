{
  "name": "ecommerce-camiones",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "dev:backend": "concurrently -n tsc,nest -c blue,magenta \"npm --prefix backend run build:watch\" \"npm --prefix backend run start:dev\"",

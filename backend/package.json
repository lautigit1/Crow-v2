{
  "name": "crow-backend",
  "version": "0.1.0",
  "description": "Fortaleza API NestJS + Supabase para Crow Repuestos",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "start": "node dist/main.js",
    "build:watch": "tsc -p tsconfig.build.json -w",
    "start:dev": "nodemon --watch dist --ext js --exec node dist/main.js",
    "dev:api": "npm run build && concurrently -n tsc,nest -c cyan,magenta \"npm run build:watch\" \"npm run start:dev\"",
    "build": "tsc -p tsconfig.build.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "db:seed": "ts-node scripts/seed.ts",
    "db:apply": "ts-node scripts/apply-schema.ts",
    "make-admin": "ts-node scripts/make-admin.ts"
  },
  "dependencies": {
    "@nestjs/swagger": "^7.3.1",
    "swagger-ui-express": "^5.0.1",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/jwt": "^10.0.0",
    "@nestjs/passport": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@supabase/supabase-js": "^2.43.5",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "supabase": "^2.43.5",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "dotenv": "^16.4.5",
    "pg": "^8.11.5",
    "@types/pg": "^8.10.2",
    "@nestjs/testing": "^10.0.0",
    "@types/jest": "^29.5.4",
    "@types/node": "^20.0.0",
    "@types/passport-jwt": "^4.0.1",
    "@types/supertest": "^2.0.16",
    "jest": "^29.7.0",
    "nodemon": "^3.0.3",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.0"
  }
}
